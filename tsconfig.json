{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist/esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules, dist"]
}
